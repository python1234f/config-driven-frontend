{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Industrial AI JSON Simulation",
  "type": "object",
  "required": ["id", "tickMs", "durationTicks", "clientConfig", "signals", "decision"],
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "label": { "type": "string" },
    "loop": { "type": "boolean", "default": true },
    "tickMs": { "type": "number", "minimum": 200 },
    "durationTicks": { "type": "number", "minimum": 1 },
    "startTimestampMs": {
      "type": "number",
      "description": "Optional; if omitted engine falls back to Date.now()",
      "minimum": 0
    },
    "intro": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": { "type": "boolean" },
        "speedMs": { "type": "number", "minimum": 30 }
      }
    },
    "clientConfig": {
      "type": "object",
      "required": ["id", "features"],
      "additionalProperties": true,
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "features": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "decisionHistory": { "type": "boolean" },
            "aiConfidence": { "type": "boolean" },
            "processDiagram": { "type": "boolean" }
          }
        }
      }
    },
    "diagram": {
      "type": "object",
      "required": ["id", "units", "connections"],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "layout": { "type": "string", "enum": ["absolute", "layered"] },
        "units": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "type", "x", "y"],
            "additionalProperties": false,
            "properties": {
              "id": { "type": "string" },
              "type": { "type": "string" },
              "sectionId": { "type": "string" },
              "x": { "type": "number" },
              "y": { "type": "number" }
            }
          }
        },
        "connections": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["from", "to"],
            "additionalProperties": false,
            "properties": {
              "from": { "type": "string" },
              "to": { "type": "string" },
              "kind": { "type": "string", "enum": ["bus", "internal"] }
            }
          }
        }
      }
    },
    "signals": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "unit", "start", "deltaPerTick"],
        "additionalProperties": false,
        "properties": {
          "name": { "type": "string" },
          "unit": { "type": "string" },
          "start": { "type": "number" },
          "deltaPerTick": { "type": "number" },
          "trend": { "type": "string" }
        }
      }
    },
    "decision": {
      "type": "object",
      "required": ["type", "confidence", "meta"],
      "additionalProperties": false,
      "properties": {
        "type": { "type": "string" },
        "confidence": {
          "type": "object",
          "required": ["start", "deltaPerTick", "max"],
          "additionalProperties": false,
          "properties": {
            "start": { "type": "number", "minimum": 0, "maximum": 1 },
            "deltaPerTick": { "type": "number" },
            "max": { "type": "number", "minimum": 0, "maximum": 1 }
          }
        },
        "meta": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "unitId": { "type": "string" },
            "sectionId": { "type": "string" },
            "diagramId": { "type": "string" },
            "reason": { "type": "string" }
          }
        }
      }
    },
    "fault": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": { "type": "boolean" },
        "jumpEveryTicks": { "type": "number", "minimum": 1 },
        "unitIndex": { "type": "number", "minimum": 0 },
        "sectionPath": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        }
      }
    }
  }
}
